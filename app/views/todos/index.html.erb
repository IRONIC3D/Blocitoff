

<div class="container">
      <div class="row-fluid row-fluid-1">
        <span class="span12">
          <div class="container">
            <h1 class="heading">My List</h1>
          </div>
        </span>
      </div>
      <div class="row-fluid">
        <span class="span4"></span>
        <span class="span4">
          <%= form_for @todo do |f| %>
            <div>
              <h3 class="heading">What do you want to do?</h3>
            </div>
            <span></span>
            <%= f.label :title %>
            <%= f.text_field :title, class: "textinput", placeholder: "Type your to-do" %>
            <%= f.submit "Add", class: "btn btn-primary" %>
          <% end %>
        </span>
        <span class="span4"></span>
      </div>
      <div class="container container-1">
        <div class="row-fluid">
          <span class="span3"></span>
          <span class="span6">
            <div class="pull-center">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Discription</th>
                    <th>Days Left</th>
                    <th>Completed</th>
                  </tr>
                </thead>
                <tbody>
                  <% @todos.each do |todo| %>
                    <tr>
                      <td><%= todo.title %></td>
                      <td class="td-1"><% from_time = todo.created_at %><%= distance_of_time_in_words(from_time, from_time + 7.days) %></td>
                      <td>
                        <label class="checkbox">
                          
                          <%= link_to todo, method: :delete do %><input type="checkbox" value="" name=""><% end %>
                          <span></span>
                        </label>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </span>
          <span class="span3"></span>
        </div>
      </div>
    </div>